<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:id="@+id/rel_tt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/title" >

            <TextView
                android:id="@+id/tv_dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffff" />
        </RelativeLayout>

        
        
        
        
    <RelativeLayout
        android:id="@+id/rel_dialog_sample"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
         android:background="@drawable/textlines"
        android:layout_below="@+id/rel_tt"
        >

        <TextView
            android:id="@+id/tv_dialog_sample_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Sample Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </RelativeLayout>
        
        
        
        
        
        
        <RelativeLayout
            android:id="@+id/rel_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/rel_dialog_sample" >

            <RelativeLayout
                android:id="@+id/rel_header_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp" >

                <EditText
                    android:id="@+id/edit_dialog_msg"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/btn_header_options"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:background="@drawable/textlines"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:hint="Message" >

                    <requestFocus />
                </EditText>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_header_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/rel_header_text"
                android:layout_marginTop="4dp"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:text="Font Size"
                    android:textColor="#000000"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android:id="@+id/edit_dialog_size"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                     android:background="@drawable/textlines"
                    android:layout_toRightOf="@+id/textView1"
                    android:hint="Size"
                     android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                     android:textColor="#000000"
                    android:inputType="numberSigned"
                    android:text="20" />

                <Button
                    android:id="@+id/btn_dialog_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@+id/edit_dialog_size" />
            </RelativeLayout>
            
            
            
        <Spinner
            android:id="@+id/spinner_font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/rel_header_option"
            android:layout_marginTop="8dp"
            android:background="@drawable/textlines"
            android:ems="10"
             />
        
        
        
        
        
            <Button
        android:id="@+id/btn_dialog_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_font"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/textlines"
        android:layout_marginBottom="5dp"
        android:textColor="#000000"
        android:text="    Save    " />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_dialog_save"
                android:layout_centerHorizontal="true"
                
                android:textAppearance="?android:attr/textAppearanceMedium" />
            
        </RelativeLayout>
        
        
        
        
        
        
        
        
        
    </RelativeLayout>



</RelativeLayout>